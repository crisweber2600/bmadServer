{
  "name": "bmadserver.playwright.tests",
  "version": "1.0.0",
  "description": "Playwright E2E tests for bmadServer - Epics 3 and 8.4",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:epic3": "playwright test tests/epic3/",
    "test:epic8": "playwright test tests/epic8/",
    "report": "playwright show-report"
  },
  "keywords": ["playwright", "e2e", "testing", "bmadserver"],
  "author": "bmadServer Team",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3"
  }
}
