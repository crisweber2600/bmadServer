{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "OVERRIDE_THIS_IN_PRODUCTION_WITH_ENVIRONMENT_VARIABLE_32_CHARS_MIN",
    "Issuer": "bmadServer",
    "Audience": "bmadServer-api",
    "AccessTokenExpirationMinutes": 15
  },
  "SparkCompatRollout": {
    "EnableCompatV1": true,
    "EnableAuth": true,
    "EnablePresence": true,
    "EnableChats": true,
    "EnablePullRequests": true,
    "EnableCollaborationEvents": true,
    "EnableDecisionCenter": true
  },
  "Bmad": {
    "ManifestPath": "_bmad/_config/agent-manifest.csv",
    "WorkflowManifestPath": "_bmad/_config/workflow-manifest.csv",
    "EnabledModules": [
      "core",
      "bmm"
    ],
    "BasePath": "..\\..",
    "TestMode": "Live",
    "OpenCode": {
      "ExecutablePath": "opencode",
      "DefaultModel": "claude-sonnet-4-20250514",
      "TimeoutSeconds": 120,
      "VerboseLogging": false,
      "MaxRetries": 3,
      "RetryDelayMs": 1000
    },
    "Copilot": {
      "DefaultModel": "gpt-4.1",
      "TimeoutSeconds": 120,
      "VerboseLogging": false,
      "MaxRetries": 3,
      "RetryDelayMs": 1000,
      "SessionIdPrefix": "bmad-workflow-"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/auth/register",
        "Period": "1h",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/auth/refresh",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  }
}
